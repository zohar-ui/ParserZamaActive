#!/bin/bash
# ============================================
# Git Pre-Commit Hook
# ============================================
# Purpose: Auto-update agents.md before every commit
# Installation:
#   cp scripts/utils/git-hooks/pre-commit .git/hooks/pre-commit
#   chmod +x .git/hooks/pre-commit

echo "ğŸ” Running pre-commit checks..."

# Check if agents.md is being committed
if git diff --cached --name-only | grep -q "supabase/migrations"; then
    echo "ğŸ“Š Detected migration changes, updating schema reference..."

    # Run schema update
    ./scripts/ops/update_agents_md.sh

    echo "âš ï¸  Please review schema changes in docs/context/agents.md and re-add if needed"
    echo "   Run: git add docs/context/agents.md"
fi

echo "âœ… Pre-commit checks complete"
exit 0
